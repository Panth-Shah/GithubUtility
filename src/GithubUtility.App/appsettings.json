{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Scheduler": {
    "IngestionIntervalMinutes": 60
  },
  "AuditStore": {
    "Provider": "Json",
    "ConnectionString": "Data Source=./data/audit.db",
    "InitializeSchemaOnStartup": true
  },
  "GitHubConnector": {
    "Mode": "Sample",
    "Organization": "",
    "Repositories": [
      "org/platform-service",
      "org/payments-api"
    ],
    "Mcp": {
      "Endpoint": "http://localhost:8080/tools/invoke",
      "ApiKey": "",
      "ListRepositoriesTool": "list_repositories",
      "ListPullRequestsTool": "list_pull_requests",
      "ListPullRequestReviewsTool": "list_reviews",
      "ListPullRequestEventsTool": "list_pull_request_events"
    }
  },
  "Copilot": {
    "CliPath": "copilot",
    "CliUrl": "",
    "GitHubTokenEnvVar": "GITHUB_TOKEN",
    "Model": "gpt-4o",
    "SystemPrompt": "You are a helpful assistant for GitHub PR auditing. Use available tools to answer questions about pull requests, code reviews, and repository activity."
  },
  "AllowedHosts": "*"
}
